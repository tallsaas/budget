{
    "name": "tallsaas/budget",
    "description": "Budget integration support for TALLSaaS tools.",
    "keywords": [
        "Budget",
        "saas",
        "tailwind",
        "alpinejs",
        "laravel",
        "livewire"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Joshua Anderton",
            "email": "hey@joshuaanderton.ca"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.67|^9.0",
        "livewire/livewire": "^2.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "TallSaas\\Budget\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TallSaas\\Budget\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "TallSaas\\Budget\\Providers\\BudgetServiceProvider"
            ]
        }
    }
}